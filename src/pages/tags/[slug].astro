---
import { getCollection } from "astro:content";
import { siteUrl } from "../../../sitedata";
import Layout from "../../components/Layout.astro";
import getTagsArrayFromPostList from "../../components/getTagsArrayFromPostList";

export async function getStaticPaths() {
  const allPosts = await getCollection("posts");

  const tags = getTagsArrayFromPostList(allPosts);

  return tags.map((tag) => {
    return {
      params: { slug: tag.title },
      props: { tag },
    };
  });
}
const { tag } = Astro.props;
---

<Layout
  pageTitle={`Tags with the topic ${tag.title}`}
  pageDescription={tag.description}
  slug={`${siteUrl}/tags/${tag.title}`}
  classes="px-6"
>
  <h1 class="my-4 text-4xl">Articles about {tag.title}:</h1>
  {
    tag.posts.length > 0 && (
      <ul class="mb-4 list-disc">
        {tag.posts.map((post) => (
          <li class="ml-4">
            <a
              class="block px-1 text-lg hover:underline"
              href={`/posts/${post.slug}/`}
            >
              {post.data.title}
            </a>
          </li>
        ))}
      </ul>
    )
  }
</Layout>
