---
import Layout from '../components/Layout.astro';
import FormatDate from '../components/FormatDate.astro';
import { siteUrl } from '../../sitedata';

const { frontmatter } = Astro.props;
---
<Layout pageTitle={frontmatter.title} canonical={frontmatter.canonicalLink} pageDescription={frontmatter.description}>
  <h1 class="mb-4 text-6xl text-zinc-800">{frontmatter.title}</h1>
  {frontmatter.datePublished && <p class="my-2">Published on <FormatDate datetime={frontmatter.datePublished}/></p>}
  {frontmatter?.tags?.length > 0 && (
      <p class="mb-4">
      <span>This article is about:</span>
      {frontmatter.tags?.map(tag => (
        <a href={`${siteUrl}${tag}/`} class="inline-block m-1 badge badge-outline hover:badge-primary hover:text-white">{tag}</a>
      ))}
      </p>
  )}
  <article class="prose prose-xl prose-headings:mb-4 text-slate-900 prose-headings:text-slate-900 prose-a:text-slate-900">
    <slot />
  </article>
  {frontmatter?.tags?.length > 0 && (
    <p class="mt-6 mb-4">
    <span>Read more articles about:</span>
    {frontmatter.tags?.map(tag => (
      <a href={`${siteUrl}/tags/${tag}/`} class="inline-block m-1 badge badge-outline hover:badge-primary hover:text-white">{tag}</a>
    ))}
    </p>
)}
</Layout>

