---
import { SEO } from 'astro-seo'
import Header from './Header.astro'
import Footer from './Footer.astro'

import defaultShareCard from '../images/default-share-card.png'
interface Props {
  pageTitle: string
  pageDescription?: string
  shareCard?: string
  canonical?: string
  slug?: string
}

import {
  title,
  subtitle,
  menuItems,
  footerMenuItems,
  acknowledgementText,
  socialLinks, 
siteUrl} from '../../sitedata';

const { pageTitle, pageDescription, shareCard, canonical } = Astro.props

const seoTitle = pageTitle ? `${pageTitle} - ${title}`: title

const seoProps = {
  title: seoTitle,
  description: pageDescription ?? subtitle,
  openGraph: {
    basic: {
      title: seoTitle,
      type: 'website',
      image:  shareCard ?? defaultShareCard,
    },
    image: {
      url:  shareCard ?? defaultShareCard,
      type: 'image/png',
      alt: 'Share card',
    },
    optional: {
      description: subtitle,
      locale: 'en-GB',
      siteName: title,
    }
  },
  twitter: {
    card: 'summary',
    site: '@muzzlehatch_',
    creator: '@muzzlehatch_',
  },
}
const pathname = new URL(Astro.request.url).pathname;
---
<html lang="en" data-theme="mytheme">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width">
  <link rel="icon" type="image/x-icon" href="/favicon.ico" />
  <link rel="stylesheet" href="/styles/global.css">
  <link rel="preload" href="/fonts/Lovechild-Regular.woff2" as="font" />
  <SEO
    {...seoProps}
    canonical={canonical ?? `${siteUrl}${pathname}`}
   />
</head>
<body class="leading-relaxed text-black bg-secondary">
    <Header title={title} menuItems={menuItems} subtitle={subtitle} />
    <main class="py-10 mx-auto max-w-contain" id="main">
      <slot />
    </main>
    <div class="text-white prefooter bg-primary py-11">
      <div class="mx-auto max-w-contain">
        <blockquote><h2 class="text-4xl">“Wisest are they who know they do not know.”</h2><attr>— Jostein Gaarder</attr></blockquote>
      </div>
    </div>
    <Footer title={title} footerMenuItems={footerMenuItems} acknowledgementText={acknowledgementText} socialLinks={ socialLinks } />
</body>
</html>
